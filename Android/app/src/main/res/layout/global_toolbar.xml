<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_toolbar"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="?attr/colorPrimary"
    android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
    app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
    >
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <Button
            android:id="@+id/drawerButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_drawer"
            app:layout_constraintBottom_toBottomOf="@id/logoTextView"
            app:layout_constraintEnd_toStartOf="@id/logoTextView"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/logoTextView" />

        <TextView
            android:id="@+id/logoTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:text="@string/app_name"
            style="@style/custom_style_toolbar_item"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/drawerButton"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/globalSearch"
            style="@style/custom_style_toolbar_item"
            android:layout_width="0dp"
            android:layout_height="50dp"
            app:layout_constraintHorizontal_weight="5"
            android:background="#FFFFFF"
            android:textColorHint="#727272"
            android:textColor="#000000"
            android:hint="Search any product"
            app:layout_constraintBottom_toBottomOf="@+id/logoTextView"
            app:layout_constraintEnd_toStartOf="@id/toolbar_search_button"
            app:layout_constraintStart_toEndOf="@+id/logoTextView"
            app:layout_constraintTop_toTopOf="@+id/logoTextView">

        </EditText>

        <Button
            android:id="@+id/toolbar_search_button"
            app:layout_constraintStart_toEndOf="@id/globalSearch"
            android:layout_width="0dp"
            app:layout_constraintHorizontal_weight="1"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/logoTextView"
            app:layout_constraintBottom_toBottomOf="@id/logoTextView"
            android:background="@drawable/icon_search"
            app:layout_constraintEnd_toEndOf="@id/toolbar_cart_button"/>
        <Button
            android:id="@+id/toolbar_cart_button"
            app:layout_constraintStart_toEndOf="@id/toolbar_search_button"
            android:layout_width="0dp"
            app:layout_constraintHorizontal_weight="1"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/logoTextView"
            app:layout_constraintBottom_toBottomOf="@id/logoTextView"
            android:background="@drawable/cart_icon"
            app:layout_constraintEnd_toEndOf="parent"/>
    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.Toolbar>